# Media-to-Text Microservice Environment Variables

# Required: OpenAI API Key for speech-to-text processing
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379

# Optional: FFmpeg Container Configuration
FFMPEG_CONTAINER_URL=http://ffmpeg:8080

# Optional: Processing Configuration
OPENAI_MAX_PARALLEL_REQUESTS=8
TEMP_DIR=/tmp/media-to-text
CLEANUP_TEMP_FILES=true

# Optional: API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Optional: Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090