# Media-to-Text Microservice Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MAX_CHUNK_SIZE_MB=25
OPENAI_MAX_PARALLEL_REQUESTS=8

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_TTL_DAYS=7
REDIS_JOBS_PREFIX=jobs

# File Processing Configuration
TEMP_DIR=/tmp/media-to-text
CLEANUP_TEMP_FILES=true

# FFmpeg Configuration
FFMPEG_CONTAINER_URL=http://ffmpeg:8080

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
ENABLE_AXIOM=false
AXIOM_TOKEN=your_axiom_token_here
AXIOM_DATASET=media-to-text-logs
LOG_SENSITIVE_DATA=false